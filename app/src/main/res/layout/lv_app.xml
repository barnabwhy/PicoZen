<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/bg_app_icon">
    <View
        android:id="@+id/app_color_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent" />
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_app_icon_overlay" />

    <ImageView
        android:id="@+id/imageLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:src="@android:drawable/ic_menu_gallery" />

    <ImageView
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:layout_centerInParent="true"
        android:src="@drawable/loading_indicator"
        android:visibility="gone" />
    <View
        android:id="@+id/app_icon_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_app_icon_overlay"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_margin="15dp" />

    <View
        android:id="@+id/favorite_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/bg_ico_btn_hover"
        android:scaleType="fitCenter"
        android:foreground="@drawable/ic_favorite"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp" />

    <View
        android:id="@+id/hidden_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/bg_ico_btn_hover"
        android:scaleType="fitCenter"
        android:foreground="@drawable/ic_hidden"
        android:layout_alignParentBottom="true"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="50dp" />
</RelativeLayout>